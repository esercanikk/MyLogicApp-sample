@model MyLogicApp_sample.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Login", "Account", new { role = "form" }, FormMethod.Post, new { id = "girisyapform" }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="input-username">Kullanıcı adı</label>
                @Html.TextBoxFor(x => x.UserName, new { placeholder = "Kullanıcı adı", @class = "form-control", type = "text", required = "required", id = "input-username" })
            </div>
            <div class="form-group">
                <label for="input-password">Şifre</label>
                @Html.TextBoxFor(x => x.Password, new { placeholder = "Şifre", @class = "form-control", type = "password", required = "required", id = "input-password" })
            </div>
            <button type="submit" id="girisYap" class="btn btn-primary">Giriş Yap</button>
        }
    </div>
</div>